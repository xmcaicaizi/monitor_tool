{
  "name": "monitor-tool",
  "version": "1.0.0",
  "description": "A simple monitoring tool for checking service status",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:exe",
    "build:exe": "pkg server.js --targets node16-win-x64 --output dist/monitor-tool.exe",
    "build:portable": "npm run clean && npm run copy-files && npm run create-portable",
    "package": "npm run build:portable",
    "clean": "if exist dist rd /s /q dist",
    "copy-files": "mkdir dist\\monitor-tool && robocopy . dist\\monitor-tool /E /XF package-exclude.txt /XD node_modules .git dist & exit /b 0",
    "create-portable": "cd dist && powershell -Command \"Compress-Archive -Path monitor-tool -DestinationPath monitor-tool-portable.zip\"",
    "zip": "npm run create-portable"
  },
  "keywords": [
    "monitoring",
    "node.js",
    "vue.js"
  ],
  "author": "Cline",
  "license": "MIT",
  "pkg": {
    "assets": [
      "frontend/**/*",
      "config/**/*",
      "package.json"
    ],
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "nexe": "^5.0.0-beta.4",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
